{
  "manifest_version": 3,
  "name": "Reading List Dashboard",
  "description": "A chrome extension to enhance the features of chrome reading list",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "readingList",
    "commands",
    "scripting"
  ],
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_title": "Click to add to reading list",
    "default_icon": {
      "34":"icon-34.png",
      "128":"icon-128.png"
    }
  },
  "commands":{
    "toggle-reading-list": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Toggle reading list"
    },
    "add-or-toggle-reading-list": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Add to reading list"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-128.png", "icon-34.png"],
      "matches": []
    }
  ]
}
